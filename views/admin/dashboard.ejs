<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">

  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-6">Welcome, Admin</h1>

    <div class="flex justify-end mb-6">
      <a href="/admin/add-post" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded">Add New Post</a>
    </div>

    <% if (posts && posts.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% posts.forEach(post => { %>
          <div class="bg-gray-800 border border-gray-700 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300">
            
            <% if (post.image && post.image.length > 0) { %>
              <img src="<%= post.image %>" alt="Post image" class="w-full h-48 object-cover">
            <% } else { %>
              <div class="w-full h-48 bg-gray-700 flex items-center justify-center text-gray-400">
                No Image
              </div>
            <% } %>

            <div class="p-4">
              <h2 class="text-xl font-bold mb-2 text-white"><%= post.title %></h2>
              <p class="text-gray-400 mb-3"><%= post.description %></p>

              <% if (post.date) { %>
                <p class="text-sm text-gray-500 mb-4">
                  <%= new Date(post.date).toLocaleString() %>
                </p>
              <% } %>

              <div class="flex justify-between gap-2">
                <form action="/admin/delete/<%= post._id %>" method="POST">
                  <button type="submit" class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded text-white">Delete</button>
                </form>
                <a href="/admin/edit/<%= post._id %>" class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded text-white text-center">Edit</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-400 text-lg">No posts found.</p>
    <% } %>
  </div>

</body>
</html>
