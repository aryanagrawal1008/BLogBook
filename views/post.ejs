<div class="post-details max-w-md mx-auto m-6 rounded-2xl overflow-hidden shadow-md border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 transition-all duration-300 hover:shadow-xl">
  <img src="<%= data.image %>" alt="Post Image" class="w-full h-60 object-cover transition-transform duration-300 hover:scale-105" />

  <div class="p-6 flex flex-col gap-4">
    <h2 class="text-2xl font-semibold text-gray-800 dark:text-white text-center">
      <%= data.title %>
    </h2>

    <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed text-center">
      <%= data.description %>
    </p>

    <div class="flex justify-center">
      <a href="#" class="mt-2 inline-block px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition">
        Read More
      </a>
    </div>
  </div>
</div>
