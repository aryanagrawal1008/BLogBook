<div class="m-4 p-6 flex flex-wrap items-center gap-6 bg-gray-100 dark:bg-gray-800 dark:text-white rounded-lg shadow-lg">
  <img
    src="https://images.unsplash.com/photo-1499714608240-22fc6ad53fb2?ixlib=rb-4.0.3&auto=format&fit=crop&w=870&q=80"
    alt="Profile Picture"
    class="w-32 h-32 rounded-full border-4 border-blue-500 shadow-md object-cover"
    loading="lazy"
  />
  <div>
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Welcome to the BLogBook!</h1>
    <p class="mt-2 text-gray-700 dark:text-gray-300 max-w-md">
      Dive into amazing articles, tutorials, and thoughts on web development, coding tips, and more. Built with ❤️ using Node.js, MongoDB, and Tailwind CSS.
    </p>
    <div class="mt-4 flex gap-4">
      <a href="https://github.com/yourusername" target="_blank" class="text-gray-700 dark:text-gray-300 hover:text-blue-500 transition">
        <i class="fab fa-github text-xl"></i>
      </a>
      <a href="https://linkedin.com/in/yourusername" target="_blank" class="text-gray-700 dark:text-gray-300 hover:text-blue-500 transition">
        <i class="fab fa-linkedin text-xl"></i>
      </a>
      <a href="mailto:youremail@example.com" class="text-gray-700 dark:text-gray-300 hover:text-blue-500 transition">
        <i class="fas fa-envelope text-xl"></i>
      </a>
    </div>
  </div>
</div>

<center>
  <h2 class="text-3xl font-bold mt-8 mb-4 text-gray-800 dark:text-gray-100">Latest Posts</h2>
</center>

<section class="flex flex-wrap justify-center gap-6 px-4">
  <% posts.forEach(post => { %>
  <div class="bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg shadow-md hover:shadow-xl hover:scale-105 transition-transform duration-300 ease-in-out w-full sm:w-[22rem]">
    <a href="/post/<%= post._id %>" class="block p-4">
      <img src="<%= post.image %>" alt="Post image" class="w-full h-48 object-cover mb-2" />
      <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100"><%= post.title %></h3>
      <% if (post.description) { %>
        <p class="text-gray-600 dark:text-gray-400 mb-2"><%= post.description.substring(0, 100) + '...' %></p>
      <% } else { %>
        <p class="text-gray-600 dark:text-gray-400 mb-2 italic">No description available.</p>
      <% } %>
      <p class="text-sm text-gray-500 dark:text-gray-400"><%= post.date.toLocaleString() %></p>
    </a>
  </div>
  <% }); %>
</section>

<section class="flex justify-center mt-8 mb-12">
  <% if (nextPage) { %>
    <a href="?page=<%= nextPage %>" class="text-gray-700 dark:text-gray-300 hover:text-black dark:hover:text-white font-medium underline underline-offset-4 transition-colors">
      View Older Posts →
    </a>
  <% } %>
</section>
